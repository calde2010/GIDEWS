<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="gide_PU">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<non-jta-data-source>java:/GIDEDS</non-jta-data-source>
		<class>co.gide.tx.entities.Localizacion</class>
		<class>co.gide.tx.entities.TbClientes</class>
		<class>co.gide.tx.entities.TbFirmaDigital</class>
		<class>co.gide.tx.entities.TbParametros</class>
		<class>co.gide.tx.entities.TbRangoFacturacion</class>
		<class>co.gide.tx.entities.TbResolucionFacturacion</class>
		<class>co.gide.tx.entities.TbSoftware</class>
		<class>co.gide.tx.entities.TbSwResolCliente</class>
		<class>co.gide.tx.entities.TbSwResolClientePK</class>
		<class>co.gide.tx.entities.GnAmbienteW</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost/gide" />
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="Bogota18*" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.connection.autocommit"
				value="true" />
			<property name="hibernate.archive.autodetection"
				value="class" />
		</properties>
	</persistence-unit>
</persistence>



